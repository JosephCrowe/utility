#define UpperCol cyan
#define SymbolCol brightgreen
#define CommentCol brightblack
#define StringCol brightmagenta

color %UpperCol% "\b[A-Z_][A-Za-z0-9_]*\b"
color %SymbolCol% "(\(|\)|\[|\]|,|\.|:-|->|;|\|)"

color %StringCol% "'[^']*'"

color %CommentCol% "%.*"
color %CommentCol% "/\*/"
color %CommentCol% start="/\*" end="\*/"
